<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_height="wrap_content"
        android:text="back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="40px"
            android:layout_marginLeft="50px"
            android:layout_width="75px"
            android:layout_height="75px"
            app:srcCompat="@drawable/icon_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:text="Detail Pengeluaran"
            android:layout_marginRight="50px"
            android:textStyle="bold"
            android:textSize="55px" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_marginTop="20px"
            android:layout_width="20px"
            android:layout_marginRight="50px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Download"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="1"
                android:text="Kategori"
                android:textSize="45px" />

            <Spinner
                android:id="@+id/spnrKategori"
                android:layout_width="match_parent"
                android:layout_marginLeft="50px"
                android:layout_marginRight="20px"
                android:layout_height="48dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViezzw5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_weight="1"
                android:text="Filter"
                android:textSize="45px" />

            <Spinner
                android:id="@+id/spnrFilter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:layout_marginRight="50px"
        android:background="@drawable/custom_button"
        android:text="Filter dan Cari" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="25px"
        android:layout_marginRight="50px">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="20px"
            android:textSize="60px"
            android:textStyle="bold"
            android:text="Total : " />
        <TextView
            android:id="@+id/txtTotalFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:textSize="60px"
            android:text="Rp. 40,000" />
    </LinearLayout>



    <Button
        android:id="@+id/btnTambah"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Tambah Pengeluaran" />




</LinearLayout>