<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginStart="50px"
            android:layout_marginTop="50px"
            android:layout_marginEnd="30px"
            app:srcCompat="@drawable/avatar1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginTop="75px"
                android:text="Halo, Selamat datang Kembali!" />

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginTop="0px"
                android:text="Aditya Kesuma"
                android:textSize="60px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginTop="5px"
                android:text="aditya@gmail.com"
                android:textSize="35px" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                app:srcCompat="@drawable/badge" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="40px"
            android:layout_marginLeft="50px"
            android:layout_width="75px"
            android:layout_height="75px"
            app:srcCompat="@drawable/icon_brief" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="40px"
            android:text="Rekap Pengeluaran"
            android:layout_marginRight="50px"
            android:textStyle="bold"
            android:textSize="55px" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:background="@drawable/custom_box"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60px"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="Pengeluaran Bulan ini"

                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalBulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="Rp. 10,000,000"

                    android:textSize="60px" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:background="@drawable/custom_box"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="Pengeluaran Hari ini"

                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="Rp. 10,000,000"

                    android:textSize="60px" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_marginRight="50px"
        android:background="@drawable/custom_button"
        android:text="+ Tambah Pengeluaran" />

    <Button
        android:id="@+id/btnDetailPengeluaran"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="250px"
        android:background="@drawable/custom_button"
        android:text="Detail Pengeluaran" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="100px"
        android:background="@drawable/custom_button"
        android:text="Log Out" />


</LinearLayout>


</ScrollView>
</LinearLayout>